{
	"name": "lumetas/meract",
	"description": "Lightweight PHP framework",
	"type": "project",
	"license": "MIT",
	"authors": [
		{
			"name": "lumetas",
			"role": "Developer"
		}
	],
	"require": {
		"php": "^8.0",
		"ext-pdo": "*",
		"tedivm/jshrink": "^1.7"
	},
	"require-dev": {
		"phpunit/phpunit": "^9.5",
		"symfony/process": "^5.4",
		"mockery/mockery": "^1.5"
	},
	"autoload": {
		"psr-4": {
			"Meract\\Drivers\\": "meract/drivers",
			"Meract\\Core\\": "meract/core/",
			"Meract\\Commands\\": "meract/commands/",
			"App\\": "app/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Tests\\": "tests/"
		}
	},
	"scripts": {
		"test": "phpunit",
		"test-coverage": "phpunit --coverage-html coverage"
	},
	"config": {
		"sort-packages": true,
		"optimize-autoloader": true
	},
	"minimum-stability": "stable",
	"prefer-stable": true
}
